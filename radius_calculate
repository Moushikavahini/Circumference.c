#include<stdio.h>
void main()
{
    float r, area, circumference;
    float pi=3.14;
    printf("Enter the radius :%f");
    scanf("%f",&r);
    area=pi*r*r;
    circumference = 2*pi*r;
    printf("area of circle : %2f\n",area);
    printf("circumference of circle :%2f\n",circumference);
}
************************************
Enter the radius :4
area of circle : 50
circumference of circle :25
************************************
